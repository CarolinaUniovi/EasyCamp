<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_agregar_hijo.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNombreNuevoHijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Hijo" />

    <EditText
        android:id="@+id/etApellidosNuevoHijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellidos" />

    <EditText
        android:id="@+id/etEdadNuevoHijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edad"
        android:inputType="number" />

    <EditText
        android:id="@+id/etObservacionesNuevoHijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observaciones" />

    <Button
        android:id="@+id/btnGuardarNuevoHijo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar" />
</LinearLayout>
